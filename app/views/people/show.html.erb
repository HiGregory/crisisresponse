<p id="notice"><%= notice %></p>

<%= render "header" %>

<h1><%= @plan.type %>: <%= @person.name.titleize %></h1>

<div class="left-column">
  <section class="basic_info">
    <h2><%= @person.last_name.upcase %>, <%= @person.first_name %></h2>

    <%= image_tag @plan.image %>

    <%= render "biometrics", plan: @plan %>
  </section>

  <section class="personal_info">
    <h2>Personal Information</h2>

  </section>

  <section class="emergency_contact">
    <h2>Emergency Contact</h2>
  </section>

  <section class="interaction_history">
    <h2>Interaction History</h2>
  </section>
</div>

<div class="right-column">
  <%= render "charts", events: @events %>
</div>

<div class="footer">
</div>

<%= link_to 'Back', people_path %>
